<div id="page-wrapper">

<h1>Result size: <%= @tweets.size %></h1>


<h2>Summary of search: <%= @search_tag %></h2>

<table id="example">
	<thead>
		<tr>
			<th>Links: <%= @links.size%></th>
			<th>Tags: <%= @tags.size%></th>	
		</tr>
	</thead>
	
	<tbody>
		<tr>
			<td>
				<% @links.each do |k, v| %>
				<div>Link: <%= link_to k, k, :target =>"_blank" %>, count: <%= v %></div>
				<% end %>
			</td>
			<td>
				<% @tags.each do |k, v| %>
				<div>Tag: <%= k %>, count: <%= v %></div>
				<% end %>
			</td>		
		</tr>
	</tbody>
</table>

<div class="row">
	<div class="col-lg-12">
<h2>Complete array</h2>

<table id="complete">
	<thead>
		<tr>
		  <th>Tweet</th>
		  <th>Link</th> 
		  <th>Tag</th>
		</tr>
	</thead>
	
	<tbody>
	<% @tweets.each do |tweet| %>
		<tr> 
			<td><%= tweet["tweet"] %></td>
			<td><%= tweet["links"] %></td>
			<td><%= tweet["tags"] %></td>	
		</tr>
	<% end %>
	</tbody>
</table>
</div>
</div>

<script>
	$(document).ready(function() {
    	$('#complete').dataTable();
	} );
</script>
</div>
