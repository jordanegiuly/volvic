<!-- Full Page Image Header Area -->
<div id="top" class="header">
    <div class="vert-text">
        <h1>Press Tracker</h1>
        <h3>Enter a brand name or a #tag</h3>
		
		<%= form_tag("twitter_api/search", method: "get", :class =>"navbar-form") do %>		  
		  <div class="form-group">
		  <%= text_field_tag :search_tag, "", class: "form-control", placeholder: "#MyBrand" %>
		  </div>
		  <%= submit_tag "Search !", class: "btn btn-warning" %>
		<% end %>
    </div>
</div>